<?xml version="1.0" encoding="utf-8"?>
<com.meishixing.crazysight.widget.ExpandableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.meishixing.crazysight.widget.ExpandableLayout 
        android:id="@+id/expandable_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dip"
        >

        <TextView 
            android:id="@+id/ticket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="团队票"
            style="@android:style/TextAppearance.Medium"
            />

        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView 
                android:id="@+id/ticket_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@android:style/TextAppearance.Small"
                android:text="票面价格: $160 优惠价格: $140"
                />

            <Button
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/green_button"
                android:text="订票"
                style="@style/FlatButton"
                />
    
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FlatButton"
            android:background="@drawable/blue_button"
            android:padding="2dip"
            android:textSize="10sp"
            android:text="景点到付"
            />

    </com.meishixing.crazysight.widget.ExpandableLayout>

    <LinearLayout 
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:orientation="vertical"
        android:padding="6dip"
        >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取票地址"
            android:textStyle="bold"
            />

        <TextView 
            android:id="@+id/get_ticket_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雁荡上学士路12号"
            />

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="支付方式"
            android:textStyle="bold"
            />

        <TextView 
            android:id="@+id/pay_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景区支付"
            />
    
    </LinearLayout>

</com.meishixing.crazysight.widget.ExpandableLayout>
